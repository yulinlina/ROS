<?xml version="1.0" ?>
<robot name="2020141440041Bot" xmlns:xacro="https://www.ros.org/wiki/xacro" >
    
    <!-- Create a robot chassis as Base Link -->
    <link name="base_link_chassis">
		  <visual>
		    <origin rpy="0 0 0" xyz="0 0 0"/>
		    <geometry>
		      <box size="0.5 0.3 0.07"/>
		    </geometry>
		    <material name="orange">
          <color rgba="1.0 0.4 0.04 1.0"/>
        </material>
		    
		  </visual>
      <!-- Base pose, collision and inertial -->
      <pose>0 0 0.1 0 0 0</pose>
      <collision>
        <geometry>
          <box size="0.5 0.3 0.07"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="5"/>
        <origin rpy="0 0 0" xyz="0 0 0.1"/>
        <inertia ixx="0.03954" ixy="0" ixz="0" iyy="0.10621" iyz="0" izz="0.10621"/>
      </inertial>
     
      <!-- caster -->
      <visual name="caster">
        <origin rpy=" 0 0 0" xyz="0.2 0 -0.05"/>
        <geometry>
          <sphere radius="0.05"/>
        </geometry>
        <material name="black">
          <color rgba="0.05 0.05 0.05 1.0"/>
        </material>
      </visual>
      <!-- Caster collision and inertial -->
      <collision>
        <origin xyz="0.35 0 -0.05" rpy="0 0 0" />
        <geometry>
          <sphere radius="0.05" />
        </geometry>
      </collision>
      <inertial>
        <mass value="0.5"/>
        <inertia ixx="0.0005" ixy="0.0" ixz="0.0" iyy="0.0005" iyz="0.0" izz="0.0005"/>
      </inertial>    
    </link>
  
  <!-- Create wheel right -->  
     <link name="right_wheel">      
        <visual>
          <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
          <geometry>
            <cylinder length="0.04" radius="0.1"/>
          </geometry>      
        </visual>
        <!--right wheel collision and inertial-->  
        <collision>
          <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
          <geometry>
            <cylinder length="0.04" radius="0.1"/>
          </geometry>
        </collision>
        <inertial>
          <mass value="0.2"/>
          <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
          <inertia ixx="0.000527" ixy="0" ixz="0" iyy="0.000527" iyz="0" izz="0.001"/>
        </inertial>  
    </link>
    
    <!--   Joint for right wheel  -->
    <joint name="right_wheel_hinge" type="continuous">
      <origin rpy="0 0 0" xyz="-0.05 0.15 0"/>
      <child link="right_wheel"/>
      <parent link="base_link_chassis"/>
      <axis rpy="0 0 0" xyz="0 1 0"/>
      <limit effort="10000" velocity="1000"/>
      <dynamics damping="1.0" friction="1.0" />
    </joint>  
    
    <!-- Left Wheel link -->   
    <link name="left_wheel">    
      <visual>
        <origin rpy="0 1.5706 1.5707" xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.04" radius="0.1"/>
        </geometry>      
      </visual> 
      <!--left wheel collision and inertial-->
      <collision>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
        <geometry>
          <cylinder length="0.04" radius="0.1"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.2"/>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <inertia ixx="0.000527" ixy="0" ixz="0" iyy="0.000527" iyz="0" izz="0.001"/>
      </inertial>      
      
    </link>
    
    <!--   Joint for left wheel  -->
    <joint name="left_wheel_hinge" type="continuous">
      <origin rpy="0 0 0" xyz="-0.05 -0.15 0"/>
      <child link="left_wheel"/>
      <parent link="base_link_chassis"/>
      <axis rpy="0 0 0" xyz="0 1 0"/>
      <limit effort="10000" velocity="1000"/>
      <dynamics damping="1.0" friction="1.0" />
    </joint>

     <!-- add a laser scan sensor cylinder in shape  -->
      <link name="laser_sensor"> 
        <visual>
          <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
              <cylinder length="0.05" radius="0.1"/>
            </geometry> 
          <material name="white">
            <color rgba="1.0 1.0 1.0 1.0"/>
          </material>
        </visual>

        <collision>
          <origin rpy="0 0 0" xyz="0 0 0" />
          <geometry>
             <cylinder length="0.01" radius="0.05"/>
          </geometry>
        </collision>

        <inertial>
          <mass value="1"/>
          <origin rpy="0 0 0" xyz="0 0 0"/>
          <inertia ixx="0.00015" ixy="0" ixz="0" iyy="0.00015" iyz="0" izz="0.0012"/>
        </inertial> 
    </link>

    <!-- Add a laser scan joint element to our robot -->
     <joint name="joint_sensor_laser" type="fixed">
        <origin rpy="0 0 0" xyz="0.15 0 0.05"/>
        <child link="laser_sensor"/>
        <parent link="base_link_chassis"/>
    </joint>


    <!--specifying color in Gazebo-->
    <gazebo reference="base_link_chassis">
	    <material>Gazebo/Orange</material>
    </gazebo>
    <gazebo reference="left_wheel">
	    <material>Gazebo/Red</material>
    </gazebo>
    <gazebo reference="right_wheel">
	    <material>Gazebo/Red</material>
    </gazebo>

    <!-- add a differential drive plugin the topic is 2020141440041Bot/cmd-->
    <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
      <alwaysOn>true</alwaysOn>
      <updateRate>20</updateRate>
      <leftJoint>left_wheel_hinge</leftJoint>
      <rightJoint>right_wheel_hinge</rightJoint>
      <wheelSeparation>0.4</wheelSeparation>
      <wheelDiameter>0.2</wheelDiameter>
      <torque>0.1</torque>
      <commandTopic>2020141440041Bot/cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>base_link_chassis</robotBaseFrame>
      <legacyMode>true</legacyMode>
    </plugin>
  </gazebo>

   <!--To add the sensor behaviour, we use the laser gazebo plugin with the topic being 2020141440041bot/laser/scan-->
   <gazebo reference="laser_sensor">
    <sensor type="ray" name="head_hokuyo_sensor">
        <pose>0 0 0 0 0 0</pose>
        <visualize>true</visualize>
        <update_rate>20</update_rate>
        <ray>
        <scan>
            <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-1.570796</min_angle>
            <max_angle>1.570796</max_angle>
            </horizontal>
        </scan>
        <range>
        <min>0.10</min>
        <max>10.0</max>
        <resolution>0.01</resolution>
        </range>
        <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
        </noise>
        </ray>
        <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
        <topicName>/2020141440041Bot/laser/scan</topicName>
        <frameName>laser_sensor</frameName>
        </plugin>
    </sensor>
   </gazebo>

        
</robot>
